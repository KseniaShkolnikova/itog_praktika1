<Page x:Class="Praktika_itog.autoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika_itog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="autoriz">

    <Grid  Background="#FFF9C3F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="181*"/>
            <RowDefinition Height="184*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="333*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="login" Margin="10,30,10,30" TextWrapping="Wrap" Grid.Column="1"  Grid.Row="0" />
        <PasswordBox x:Name="parol" Margin="10,30,10,30"   Grid.Column="1" Grid.Row="1" />
        <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
        <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" />
        <Button x:Name="vxod" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Content="Войти" Grid.Row="2" Click="vxod_Click" Background="#FFAAE9FD"/>
    </Grid>
</Page>
